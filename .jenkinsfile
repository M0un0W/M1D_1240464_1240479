pipeline {
    agent any

    triggers {
        githubPush()
    }

    stages {
        stage('Check Out') {
            steps {
                echo 'Checking out the latest code...'
                checkout scm  // Uses the default SCM configuration in Jenkins
            }
        }

        stage('Clean') {
            steps {
                echo 'Cleaning the workspace...'
                script {
                    // Set executable permissions for Linux/Mac systems
                    if (isUnix()) {
                        sh 'chmod +x ./mvnw'   // Set executable permissions
                    } else {
                        echo 'Skipping permission change on Windows'
                    }
                }
                // Execute the clean command
                if (isUnix()) {
                    sh './mvnw clean'
                } else {
                    bat 'mvnw clean' // Use 'bat' for Windows
                }
            }
        }

        stage('Unit Tests') {
            steps {
                echo 'Running unit tests...'
                script {
                    try {
                        if (isUnix()) {
                            sh './mvnw test'  // Run unit tests with Maven on Unix
                        } else {
                            bat 'mvnw test' // Run unit tests on Windows
                        }
                        currentBuild.result = 'SUCCESS'
                    } catch (Exception e) {
                        currentBuild.result = 'UNSTABLE'
                        echo 'Unit tests failed, marking as UNSTABLE...'
                    }
                }
            }
        }

        stage('Mutation Tests') {
            steps {
                echo 'Running mutation tests...'
                if (isUnix()) {
                    sh './mvnw org.pitest:pitest-maven:mutationCoverage'
                } else {
                    bat 'mvnw org.pitest:pitest-maven:mutationCoverage'
                }
            }
        }

        stage('Integration Tests') {
            when {
                expression { currentBuild.result == 'UNSTABLE' }  // Runs only if Unit Tests failed
            }
            steps {
                echo 'Running integration tests due to unit test failure...'
                if (isUnix()) {
                    sh './mvnw verify'  // Runs integration tests using the Failsafe plugin
                } else {
                    bat 'mvnw verify' // Use 'bat' for Windows
                }
            }
        }

        stage('Deploy') {
            steps {
                echo 'Deploying the application...'
                // Add deployment steps here, consider using platform-specific commands if needed
            }
        }

        // stage('Smoke Tests') {
        //     steps {
        //         echo 'Running smoke tests...'
        //         // Add smoke test steps here
        //     }
        // }
    }

    post {
        success {
            echo 'Pipeline completed successfully!'
        }
        unstable {
            echo 'Pipeline completed with issues in unit tests, integration tests were executed as a fallback.'
        }
        failure {
            echo 'Pipeline failed!'
        }
    }
}
